<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:id="@+id/notif_lg">
    <TextView
        android:id="@+id/notif_title"
        android:text="@string/app_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:paddingTop="1dp"
        android:textSize="17sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/notif_nets"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:paddingTop="2dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notif_title">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wifi_notif"
                android:layout_marginHorizontal="2dp"
                android:paddingTop="1dp"
                android:paddingBottom="3dp"/>
            <TextView
                android:id="@+id/wifi_new_notif_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingVertical="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cell_notif"
                android:layout_marginHorizontal="2dp"/>
            <TextView
                android:id="@+id/cell_new_notif_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingVertical="2dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bt_notif"
                android:layout_marginHorizontal="2dp"/>
            <TextView
                android:id="@+id/bt_new_notif_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingVertical="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="left">
            <ImageView
                android:layout_width="16dp"
                android:paddingTop="2dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dist_notif"
                android:layout_marginHorizontal="2dp"/>
            <TextView
                android:id="@+id/dist_notif_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="2dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingVertical="2dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>